<Window x:Class="js.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="240" Width="525">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"  Content="Login-Seite" FontSize="30" Margin="2"/>
        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="errorMessageText" VerticalAlignment="Bottom" Foreground="Red" Margin="2"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Username:" Margin="8" />
        <TextBox Grid.Row="2" Grid.Column="2" x:Name="usernameText" Margin="8"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Passwort:" Margin="8" />
        <PasswordBox Grid.Row="3" Grid.Column="2" x:Name="passwordText" Margin="8"/>
        <Button Grid.Row="4" Grid.Column="0" Content="Login" Click="Login_Click" Margin="8" ></Button>
        <Button Grid.Row="4" Grid.Column="2" Content="Regristieren" Click="Register_Click" Margin="8"></Button>
    </Grid>
</Window>
